<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Add new product</h1>

            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                  <a class="nav-link active" id="details-tab" data-toggle="pill" href="#details" role="tab" aria-controls="details" aria-selected="true">Details</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" id="specifications-tab" data-toggle="pill" href="#specifications" role="tab" aria-controls="specifications" aria-selected="false">Specifications</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Contact</a>
                </li>
            </ul>

            <form action="/products" method="post" enctype="multipart/form-data">
                <div class="row product-form tab-content" id="pills-tabContent">
                    <div class="col-6 tab-pane fade show active" id="details" role="tabpanel" aria-labelledby="details-tab">
                        <label>Category <font color="red">*</font></label>
                            <select name="category" required>
                                <option>Select a category</option>
                                <option>Electronics</option>
                                <option>Men</option>
                                <option>Women</option>
                                <option>Baby and Kids</option>
                            </select>
                            <label>Name <font color="red">*</font></label>
                            <input type="text" name="name" placeholder="Realme2 (Diamond Red, 32 GB)" required>
                            <div class="display-flex">
                                <input type="number" id="quantity" name="quantity" min="1" max="10" placeholder="Quantity" required>
                                <input type="number" id="price" name="price" min="0" placeholder="Price" required>
                            </div>
                            <label>Description</label>
                            <textarea id="description" name="description" rows="4" cols="55" placeholder="Add a description here..."></textarea>
                            <label for="image">Image</label>
                            <input type="file" id="image" name="image">
                    </div>

                    <div class="col-12 tab-pane fade" id="specifications" role="tabpanel" aria-labelledby="specifications-tab">
                        <div class="input-group">
                            <input type="text" class="spec-title form-control" placeholder="Features">
                            <div class="input-group-append">
                              <span class="input-group-text" id="add-spec-title">Add</span>
                            </div>
                        </div>
                        <br>
                        <div class="row" id="popo"></div>
                    </div>
                    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">Contact</div>
                </div>
                <button class="btn-sbmit" type="submit">Add New</button>
            </form>
        </div>
    </div>
</div>

<script src="/js/product.js"></script>